<Window x:Class="WPF01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF01"
        mc:Ignorable="d"
        Title="Hello!" Height="450" Width="800">
    <Grid>
        <Label Content="Select a message." HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <RadioButton x:Name="RadioButton01" Content="Hello." HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioButton02" Content="Goodbye." HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top"/>
        <Button Content="Submit." HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="Credits" Content="Credits." HorizontalAlignment="Center" Margin="0,295,0,0" VerticalAlignment="Top" Click="Credits_Click" RenderTransformOrigin="0.5,0.5"/>

    </Grid>
</Window>
